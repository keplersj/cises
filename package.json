{
  "name": "cises",
  "description": "A browser extension that incrementally improves on the University of Utah CIS experience.",
  "version": "0.0.0-dev",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Kepler Sticka-Jones",
    "email": "kepler@stickajones.org",
    "url": "https://keplersj.org"
  },
  "scripts": {
    "clean": "rimraf build coverage cis-enhancement-suite_chrome.zip cis-enhancement-suite_firefox.xpi",
    "build": "webpack",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js, jsx, ts, tsx, json, css, md}": [
      "prettier --write",
      "git add"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "automerge": false,
    "patch": {
      "automerge": true
    },
    "pin": {
      "automerge": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "verifyConditions": [
      "semantic-release-chrome",
      "semantic-release-firefox",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "semantic-release-chrome",
        "asset": "cis-enhancement-suite_chrome.zip",
        "distFolder": "build"
      },
      {
        "path": "semantic-release-firefox",
        "xpiPath": "cis-enhancement-suite_firefox.xpi",
        "distFolder": "build"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "path": "cis-enhancement-suite_chrome.zip"
          },
          {
            "path": "cis-enhancement-suite_firefox.xpi"
          }
        ]
      },
      {
        "path": "semantic-release-chrome",
        "asset": "cis-enhancement-suite_chrome.zip",
        "extensionId": "pebfiklbcoioidmjoelliojmfamipfnn"
      },
      {
        "path": "semantic-release-firefox",
        "xpiPath": "cis-enhancement-suite_firefox.xpi",
        "addOnSlug": "cis-enhancement-suite",
        "notesToReviewer": "This add-on makes use of content scripts to add functionality to the class registration page for University of Utah students. The extension is fully open source and can be viewed on GitHub (https://github.com/keplersj/cises)."
      }
    ]
  },
  "dependencies": {
    "@emotion/core": "10.0.9",
    "@emotion/styled": "10.0.9",
    "emotion": "10.0.9",
    "query-string": "6.3.0",
    "react": "16.8.4",
    "react-dom": "16.8.4"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/travis-cli": "7.5.2",
    "@types/jest": "24.0.11",
    "@types/pify": "3.0.2",
    "@types/query-string": "6.3.0",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.2",
    "@types/react-test-renderer": "16.8.1",
    "awesome-typescript-loader": "5.2.1",
    "babel-jest": "24.5.0",
    "copy-webpack-plugin": "5.0.1",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "jest-emotion": "10.0.9",
    "jest-fetch-mock": "2.1.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "react-test-renderer": "16.8.4",
    "rimraf": "^2.6.3",
    "semantic-release": "15.13.3",
    "semantic-release-chrome": "1.1.0",
    "semantic-release-firefox": "1.2.0",
    "source-map-loader": "0.2.4",
    "typescript": "3.3.3333",
    "web-ext-types": "3.1.0",
    "webpack": "4.29.6",
    "webpack-cli": "3.2.3"
  }
}
